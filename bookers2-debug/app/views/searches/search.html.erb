<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-11'>
      <% if @range == "User" %>
       <h2>Users search for "<%= @word %>"</h2>
       <table class="table table-hover table-inverse">
          <tbody>
            <% @users.each do |user| %>
             <tr>
              <th></th>
              <th>Name</th>
              <th>Introduction</th>
              <th></th>
             </tr>
             <tr>
              <td><%= image_tag user.get_profile_image(50, 50) %></td>
              <td><%= user.name %></td>
              <td><%= user.introduction %></td>
              <td><%= link_to "Show", user %></td>
              </tr>
            <% end %>
          </tbody>
       </table>
      <% else %>
       <h2>Books search for <%= @word %></h2>
       <table class="table table-hover table-inverse">
          <tbody>
            <% @books.each do |book| %>
             <tr>
              <th></th>
              <th>Title</th>
              <th>Opinions</th>
              <th></th>
             </tr>
             <tr>
              <td><%= image_tag book.user.get_profile_image(50, 50) %></td>
              <td><%= link_to book_path(book.user) do %>
                   <%= book.title %>
                  <% end %></td>
              <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
       </table>
      <% end %>
    </div>
  </div>
</div>